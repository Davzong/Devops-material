# Run nginx server in docker
docker run --rm --name my-nginx -p 8080:80 -d nginx
# Check docker stderr and stdout logs
docker logs my-nginx -f
# Access nginx server 
curl http://localhost:8080
cutl http://localhost:8080/asdf
